{
  "name": "jellyfin-theater",
  "productName": "Jellyfin Theater",
  "version": "3.0.5",
  "description": "Jellyfin Theater Made With Electron",
  "main": "build/shell/entry.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "run-s build electron",
    "build": "run-p build:ts build:scss build:copy",
    "build:ts": "tsc -p src/tsconfig.json",
    "build:scss": "node-sass src -ro build",
    "build:copy": "cpx src/**/*.{html,json} build",
    "electron": "electron build/shell/entry.js",
    "lint": "tslint -p src/tsconfig.json",
    "mac": "run-s build package-mac",
    "win": "run-s build package-win",
    "linux": "run-s build package-linux",
    "package-mac": "electron-builder -m",
    "package-win": "electron-builder -w",
    "package-linux": "electron-builder -l"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jellyfin/jellyfin-theater-electron.git"
  },
  "keywords": [
    "Electron",
    "Jellyfin",
    "Theater",
    "Media Client"
  ],
  "author": {
    "name": "Jellyfin",
    "email": "N/A"
  },
  "license": "GPL-2.0-only",
  "bugs": {
    "url": "https://github.com/jellyfin/jellyfin-theater-electron/issues"
  },
  "homepage": "https://github.com/jellyfin/jellyfin-theater-electron#readme",
  "devDependencies": {
    "@types/electron-settings": "^3.1.1",
    "@types/long": "^4.0.0",
    "cpx": "^1.5.0",
    "electron": "^6.0.0-beta.13",
    "electron-builder": "^21.0.15",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "source-map-support": "^0.5.12",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "comlink": "^4.0.1",
    "comlink-electron-adapter": "^0.0.1",
    "deepmerge": "^4.0.0",
    "detect-rpi": "^1.3.0",
    "electron-settings": "^3.2.0",
    "is-windows": "^1.0.0",
    "long": "^3.2.0",
    "node-mpv": "^1.0.3",
    "power-off": "^1.0.1",
    "sleep-mode": "^1.1.0"
  }
}
